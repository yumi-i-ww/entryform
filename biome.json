{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"files": {
	  "ignore": [
		"package.json",
		"package-lock.json",
		"tsconfig.*",
		"src/api/apiClient.ts",
		"src/api/types.ts"
	  ],
	  "ignoreUnknown": false
	},
	"formatter": {
	  "enabled": true,
	  "lineWidth": 100
	},
	"javascript": {
	  "globals": ["JSX"]
	},
	"json": {
	  "parser": {
		"allowTrailingCommas": true
	  }
	},
	"linter": {
	  "enabled": true,
	  "rules": {
		"correctness": {
		  "noUndeclaredVariables": "error",
		  "noUnusedVariables": "error",
		  "useExhaustiveDependencies": "error",
		  "useHookAtTopLevel": "error"
		},
		"nursery": {
		  "useSortedClasses": "warn"
		},
		"recommended": true,
		"style": {
		  "noNamespace": "error",
		  "noNonNullAssertion": "off",
		  "noUselessElse": "off"
		},
		"suspicious": {
		  "noExplicitAny": "off",
		  "noArrayIndexKey": "off"
		},
		"complexity": {
		  "noForEach": "off"
		}
	  }
	},
	"organizeImports": {
	  "enabled": false
	},
	"vcs": {
	  "clientKind": "git",
	  "enabled": true,
	  "useIgnoreFile": true
	}
  }
  